@model IEnumerable<TradingCmpn_WEB.Models.ProductModel>

<h1>Список продуктів</h1>

<form asp-action="Logout" method="post">
    <button type="submit" class="btn btn-danger mb-3">Вийти</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Назва продукту</th>
            <th>Ціна</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">Продукти не знайдені.</td>
            </tr>
        }
        else
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.ProductId">Деталі</a> |
                        <a asp-action="Edit" asp-route-id="@product.ProductId">Редагувати</a> |
                        <a asp-action="Delete" asp-route-id="@product.ProductId">Видалити</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Додати продукт</a>