<UserControl x:Class="TradingCompany_WPF.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext}">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Welcome!" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Text="You are logged in as:" FontSize="16" TextAlignment="Center" Margin="5"/>
            <TextBlock Text="{Binding CurrentRole}" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
